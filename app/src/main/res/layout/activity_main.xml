<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android2="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_margin="20dp"
    android:layout_marginTop="50dp"
    android:orientation="horizontal"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <TextView
        android2:id="@+id/textView2"
        android2:layout_width="wrap_content"
        android:layout_width="match_parent"
        android2:layout_height="wrap_content"
        android:layout_height="42dp"
        android:gravity="center_horizontal"
        android:text="@string/Calc"
        android:textColor="#607D8B"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck" />

    <EditText
        android2:id="@+id/editTextText"
        android2:layout_width="wrap_content"
        android:layout_width="match_parent"
        android2:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:autofillHints=""
        android2:ems="10"
        android:hint="@string/Enter_first_number"
        android2:inputType="text"
        android:inputType="number"
        android:minHeight="48dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android2:id="@+id/editTextNumber"
        android2:layout_width="wrap_content"
        android:layout_width="match_parent"
        android2:layout_height="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_marginStart="100dp"
        android2:ems="10"
        android:hint="@string/Enter_second_number"
        android2:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android2:layout_width="match_parent"
        android:layout_width="331dp"
        android2:layout_height="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber"
        tools:layout_editor_absoluteX="18dp">

        <Button
            android2:id="@+id/button2"
            android2:layout_width="wrap_content"
            android:layout_width="50dp"
            android2:layout_height="wrap_content"
            android:layout_height="50dp"
            android2:text="Button"
            android:text="@string/subtract"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android2:id="@+id/guideline"
            android2:layout_width="wrap_content"
            android2:layout_height="wrap_content"
            android2:orientation="horizontal"
            app:layout_constraintGuide_begin="166dp" />

        <Button
            android2:id="@+id/button"
            android2:layout_width="wrap_content"
            android:layout_width="50dp"
            android2:layout_height="wrap_content"
            android:layout_height="50dp"
            android2:text="Button"
            android:text="@string/add"
            android:textColorHighlight="#F80404"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.421"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.527" />

        <Button
            android2:id="@+id/button3"
            android2:layout_width="wrap_content"
            android:layout_width="50dp"
            android2:layout_height="wrap_content"
            android:layout_height="50dp"
            android2:text="Button"
            android:text="@string/multiply"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="@+id/guideline4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.49" />

        <Button
            android2:id="@+id/button4"
            android2:layout_width="wrap_content"
            android:layout_width="50dp"
            android2:layout_height="wrap_content"
            android:layout_height="50dp"
            android2:text="Button"
            android:text="@string/Divide"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android2:id="@+id/guideline3"
            android2:layout_width="wrap_content"
            android2:layout_height="wrap_content"
            android2:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />

        <androidx.constraintlayout.widget.Guideline
            android2:id="@+id/guideline4"
            android2:layout_width="wrap_content"
            android2:layout_height="wrap_content"
            android2:orientation="vertical"
            app:layout_constraintGuide_end="166dp" />

        <androidx.constraintlayout.widget.Guideline
            android2:id="@+id/guideline5"
            android2:layout_width="wrap_content"
            android2:layout_height="wrap_content"
            android2:orientation="vertical"
            app:layout_constraintGuide_percent="0.75" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android2:id="@+id/editTextNumber2"
        android2:layout_width="wrap_content"
        android:layout_width="match_parent"
        android2:layout_height="wrap_content"
        android:layout_margin="40dp"
        android2:ems="10"
        android:gravity="center"
        android:hint="@string/Result"
        android2:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        tools:layout_editor_absoluteX="63dp" />

</androidx.constraintlayout.widget.ConstraintLayout>